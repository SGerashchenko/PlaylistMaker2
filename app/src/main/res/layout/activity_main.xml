<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:paddingLeft="@dimen/pad16"
    android:paddingRight="@dimen/pad16"
    android:paddingBottom="48dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="4dp"
        />
    <Button
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/pad16"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:gravity="center"
        app:iconSize="24dp"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:iconPadding="@dimen/pad10"
        app:cornerRadius="@dimen/pad16"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:text="@string/search"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22"
        app:icon="@drawable/serch"
                 />
    <Button
        android:id="@+id/media_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/pad16"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:gravity="center"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:iconPadding="@dimen/pad10"
        app:cornerRadius="@dimen/pad16"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22"
        app:icon="@drawable/media"
        app:iconSize="24dp"
        android:text="@string/media"/>

    <Button
        android:id="@+id/settings_button"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="@dimen/pad16"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:gravity="center"
        app:iconGravity="textStart"
        app:iconTint="@color/black"
        app:iconPadding="@dimen/pad10"
        app:cornerRadius="@dimen/pad16"
        android:textAllCaps="false"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_22"
        app:icon="@drawable/settings"
        app:iconSize="24dp"
        android:text="@string/settings"                />
</LinearLayout>