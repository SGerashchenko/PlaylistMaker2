<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Стиль для Заголовка -->
    <style name="TextViewStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">40dp</item>
        <item name="android:paddingTop">@dimen/pad10</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <!-- Стиль для кнопок ГЛ. меню -->
    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">@dimen/pad16</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:gravity">center</item>
        <item name="iconSize">24dp</item>
        <item name="iconTint">@color/textmainmenublack</item>
        <item name="iconPadding">@dimen/pad10</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/pad16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/textmainmenublack</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>
    <!-- Строки меню НАСТРОЙКИ -->
    <style name="MenuRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
           </style>

    <!-- Текст меню НАСТРОЙКИ -->
    <style name="MenuText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingTop">@dimen/pad22</item>
        <item name="android:paddingBottom">@dimen/pad22</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <!-- Иконки в строках меню НАСТРОЙКИ -->
    <style name="MenuIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:tint">@color/settings</item>
    </style>

    <color name="mainbackground">#1A1B22</color>
    <color name="background">#1A1B22</color>
    <color name="settings">#FFFFFFFF</color>
    <color name="searchcolor">#FFFFFFFF</color>
    <color name="searchtextcolor">#1A1B22</color>
    <color name="trackcolor">#FFFFFFFF</color>

</resources>